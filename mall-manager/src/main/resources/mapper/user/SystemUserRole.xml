<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.spzx.manager.service.mapper.SystemUserRoleMapper">

<!--    insert user and role -->
    <insert id="addUserRoles" parameterType="com.mall.spzx.model.dto.system.AssignRoleDto">
        insert into sys_user_role (user_id, role_id, create_time, update_time, is_deleted) values
        <foreach collection="roleIds" item="roleId" separator=",">
            (#{userId}, #{roleId}, now(), now(), 0)
        </foreach>
    </insert>

    <delete id="deleteByUserId">
        delete from sys_user_role where  user_id = #{userId}
    </delete>
    <select id="findRoleIdByUserId" resultType="java.lang.Long">
        select role_id from sys_user_role where user_id = #{userId}
    </select>


</mapper>