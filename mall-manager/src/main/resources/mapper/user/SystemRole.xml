<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.spzx.manager.service.mapper.SystemRoleMapper">
    <resultMap id="sysRoleMap" type="com.mall.spzx.model.entity.system.SysRole" autoMapping="true" />
    <sql id="columns">
        id,role_name,role_code,description,create_time,update_time,is_deleted
    </sql>
    <sql id="findPageByCondition">
        <where>
            <if test="roleName != null and roleName != ''">
                and role_name like CONCAT('%', #{roleName}, '%')
            </if>
        </where>
    </sql>
<!--    add role-->
    <insert id="addRole">
        insert into sys_role (
            id,
            role_name,
            role_code,
            description
        ) values (
            #{id},
            #{roleName},
            #{roleCode},
            #{description}
        )
    </insert>
    <update id="updateRole">
        update sys_role set
        <if test="roleName != null and roleName != ''" >
            role_name = #{roleName},
        </if>
        <if test="roleCode != null and roleCode != ''" >
            role_code = #{roleCode},
        </if>
        <if test="description != null and description != ''" >
            description = #{description},
        </if>
        update_time = now()
        where id = #{id}
    </update>
    <update id="deleteRole">
        update sys_role set is_deleted = 1 where id = #{id}
    </update>
    <select id="findByPage" resultMap="sysRoleMap">
        select <include refid="columns" /> from sys_role
        <include refid="findPageByCondition" />
        order by id desc
    </select>
    <select id="findAll" resultType="com.mall.spzx.model.entity.system.SysRole">
        select <include refid="columns" /> from sys_role where
        is_deleted = 0
    </select>
</mapper>