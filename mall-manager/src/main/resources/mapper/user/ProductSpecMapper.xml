<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.spzx.manager.service.mapper.ProductSpecMapper">
    <sql id="column">
        id, spec_name, spec_value, create_time, update_time, is_deleted
    </sql>

    <select id="select" resultType="com.mall.spzx.model.entity.product.ProductSpec">
        select <include refid="column"/> from product_spec where is_deleted = 0
    </select>
    <insert id="insert" parameterType="com.mall.spzx.model.entity.product.ProductSpec">
        insert into product_spec(spec_name, spec_value)
        values
        (#{specName}, #{specValue})
    </insert>
    <update id="update" parameterType="com.mall.spzx.model.entity.product.ProductSpec">
        update product_spec set
        spec_name = #{specName},
        spec_value = #{specValue}
        where id=#{id}
    </update>
    <update id="delete" parameterType="Long">
        update
        product_spec set is_deleted = 1
        where id=#{id}
    </update>
</mapper>